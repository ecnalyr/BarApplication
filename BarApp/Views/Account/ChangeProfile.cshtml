@model BarApp.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "ChangeProfile";
}

<h2>ChangeProfile</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>What is your favorite drink/bar?</legend>
        <div class="editor-label">
            Favorite Drink:
        </div>
        <div class="editor-field">
            @Html.TextBox("FavoriteDrink", (string)ViewBag.favDrink)
        </div>

        <div class="editor-label">
            Favorite Bar:
        </div>
        <div class="editor-field">
            @Html.TextBox("FavoriteBar", (string)ViewBag.favBar)
        </div>

        <div class="editor-label">
            First Name:
        </div>
        <div class="editor-field">
            @Html.TextBox("FirstName", (string)ViewBag.firstName)
        </div>

         <div class="editor-label">
            Last Name:
        </div>
        <div class="editor-field">
            @Html.TextBox("LastName", (string)ViewBag.lastName)
        </div>

         <div class="editor-label">
            Street Address:
        </div>
        <div class="editor-field">
            @Html.TextBox("Address", (string)ViewBag.address)
        </div>

         <div class="editor-label">
            City:
        </div>
        <div class="editor-field">
            @Html.TextBox("City", (string)ViewBag.city)
        </div>

         <div class="editor-label">
            State:
        </div>
        <div class="editor-field">
            @Html.TextBox("State", (string)ViewBag.state)
        </div>

         <div class="editor-label">
            Zip Code:
        </div>
        <div class="editor-field">
            @Html.TextBox("PostalCode", (string)ViewBag.postalCode)
        </div>

         <div class="editor-label">
            Phone:
        </div>
        <div class="editor-field">
            @Html.TextBox("Phone", (string)ViewBag.phone)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
